<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/colorPrimary"
        android:id="@+id/card_img"
        android:layout_width="95dp"
        android:layout_height="135dp"
        app:cardCornerRadius="16dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/img_books"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardElevation="-2dp"
        android:layout_marginLeft="-48dp"
        android:layout_toRightOf="@id/card_img"
        android:layout_width="match_parent"
        app:cardCornerRadius="16dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="#25455E">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="56dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#fff"
                android:text="Name Book"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/author_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#fff"
                android:text="Name author "
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-75dp"
            android:layout_marginRight="-75dp"
            android:layout_marginBottom="11dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="20dp"
                android:layout_marginRight="4dp"
                android:foregroundGravity="center"
                android:src="@drawable/ic_baseline_monetization_on_24" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="252dp"
                android:text="29.99"
                android:textColor="#fff"
                android:textStyle="bold" />


        </LinearLayout>

    </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>